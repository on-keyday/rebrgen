{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sections",
	"scopeName": "source.sections",
	"fileTypes": [
		"sections.txt"
	],
	"patterns": [
		{
			"name": "keyword.control.section",
			"match": "^\\s*!@section\\s+([a-zA-Z0-9_.]+)",
			"captures": {
				"1": {
					"name": "entity.name.section"
				}
			}
		},
		{
			"name": "keyword.control.section",
			"match": "^\\s*!@copy_section\\s+([a-zA-Z0-9_.]+)",
			"captures": {
				"1": {
					"name": "entity.name.section"
				}
			}
		},
		{
			"name": "keyword.control.section.include",
			"match": "^\\s*!@section_include\\s+([a-zA-Z0-9_.]+)",
			"captures": {
				"1": {
					"name": "entity.name.section.include"
				}
			}
		},
		{
			"name": "keyword.control.end_section",
			"match": "^\\s*!@end_section"
		},
		{
			"name": "keyword.control.include",
			"match": "^\\s*!@include\\s+([a-zA-Z0-9_.]+)",
			"captures": {
				"1": {
					"name": "entity.name.include"
				}
			}
		}
	]
}